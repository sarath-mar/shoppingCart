<div class="container">
  <div class="text-center">
<h2 class="text-primary mt-3 text-uppercase">Cart List</h2>
      </div>
    <table class="table table-white">
  <thead>
    <tr>
      <th class="text-uppercase" scope="col">Product</th>
      <th class="text-uppercase" scope="col">Image</th>
      <th class="text-uppercase" scope="col">Category</th>
      <th class="text-uppercase" scope="col">Quantity</th>
      <th class="text-uppercase" scope="col">Delete</th>
     
    </tr>
  </thead>
  <tbody>
        
        {{#each cartProduct}}
    <tr>
      {{#each cartArray}}
      <th scope="row">{{this.product}}</th>
       <td><img style="width: 50px;height: 50px;"  src="http://localhost:3000/product-images/{{this._id}}.jpg" alt=""></td>
      <td >{{this.category}}</td>
       {{/each}}
      <td ><button class="btn btn-primary">-</button>&nbsp {{this.quantity}} &nbsp<button class="btn btn-primary ">+</button></td>
      <td><a class="btn btn-danger" href="">Remove</a></td>
     
    
     
    </tr>
    {{/each}}

  </tbody>
  </table>

</div>